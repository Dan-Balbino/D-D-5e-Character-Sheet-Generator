#:import CharacterSkills components.character.CharacterSkills
#:import Skill components.character.Skill


<CharacterScreen@Screen>:

    BoxLayout:
        padding: "11dp"
        orientation: "vertical"

        BoxLayout:
            size_hint_y: .1
            orientation: "horizontal"
            
            Info:

            Attributes:

        BoxLayout: 
            orientation: "horizontal"

            BoxLayout: 

                Button:
                    size_hint: .5, .5
                    on_release: app.a()
                
                Button:
                    size_hint: .5, .5
                    on_release: app.b()
                    
                    
                ScrollView:
                    size_hint_x: .45
                    do_scroll_y: True
                    do_scroll_x: False

                    CharacterSkills:
                        size_hint: .7, None
                        height: self.minimum_height
                        attr_mods: app.attr_mods
                        attr_skills: app.ab
                        proef_mod: app.proef_mod
                    


        BoxLayout: # Feats & Features \ Items
            size_hint_y: .35
            orientation: "horizontal"

            TextInput:
                hint_text: "Feats & Features"

            TextInput:
                size_hint_x: .6
                hint_text: "Items"

# ==================================== #

<Attributes@BoxLayout>:
    orientation: 'horizontal'

    TextInput:
        hint_text: "STR"

    TextInput:
        hint_text: "DEX"

    TextInput:
        hint_text: "CON"

    TextInput:
        hint_text: "INT"

    TextInput:
        hint_text: "WIS"

    TextInput:
        hint_text: "CHAR"

# ==================================== #

<Info@BoxLayout>:
    orientation: "vertical"
    size_hint_x: .7
    padding: 0, 0, 20, 0

    TextInput:
        hint_text: "Name"
        padding_right: 10

    TextInput:
        hint_text: "Class"
# ==================================== #

<Skill>:

    CheckBox:
        id: cbox
        size_hint: None, None
        size: 20, 20
        
    Label:
        id: modifier
        text: ""
        font_size: "13dp"
        size_hint: None, 1

    Label:
        id: skill_name
        text: ""
        font_size: "13dp"
        text_size: self.size
        halign: "left"
        valign: "middle"
        size_hint: None, 1
# ==================================== #


# ==================================== #

